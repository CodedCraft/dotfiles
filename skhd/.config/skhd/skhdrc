# Applications #####################################################################################
hyper - w  : open -a "/Applications/WhatsApp.app/"
hyper - e : open -a "/System/Applications/Mail.app/" && yabai -m space --focus 1
# f11 : open -a "/Applications/"
hyper - t : open -a "/Applications/kitty.app/"
hyper - s : open -a "/Applications/SuperSlicer.app/"
# f14 : open -a "/Applications/"
hyper - h  : open  "/Users/philip/"
hyper - d  : open  "/Users/philip/Inbox/"
hyper - i : open -a "/Applications/Adobe Illustrator 2021/Adobe Illustrator.app"
hyper - f : open -a "/Users/philip/Applications/Autodesk Fusion 360.app/"
hyper - v : open -a "/Applications/Velocidrone.app/"
hyper - b : open -a "/Applications/Brave Browser.app"
hyper - o : open -a "/System/Applications/System Preferences.app"
